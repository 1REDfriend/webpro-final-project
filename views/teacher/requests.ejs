<%- include('../layouts/header') %>

    <style>
        .cancel-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
            background: none;
            border: 1px solid #e74c3c;
            color: #e74c3c;
            border-radius: 8px;
            padding: 3px 10px;
            font-size: 0.8rem;
            cursor: pointer;
            transition: background 0.18s, color 0.18s;
        }

        .cancel-btn:hover {
            background: #e74c3c;
            color: #fff;
        }
    </style>

    <h2 class="mb-4">คำร้องอาจารย์</h2>

    <div class="card mb-4">
        <h3>ส่งคำร้อง</h3>
        <form action="/teacher/requests" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label>ประเภทคำร้อง</label>
                <select name="topic" class="form-control" required>
                    <option value="ลาป่วย/ลากิจ">ลาป่วย/ลากิจ</option>
                    <option value="เบิกอุปกรณ์">เบิกอุปกรณ์</option>
                    <option value="อื่นๆ">อื่นๆ</option>
                </select>
            </div>
            <div class="form-group">
                <label>รายละเอียด</label>
                <textarea name="description" class="form-control" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <label>ไฟล์แนบ (ถ้ามี)</label>
                <input type="file" name="attachment" class="form-control" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx">
                <small class="text-muted">รองรับ PDF, รูปภาพ, Word (.doc, .docx)</small>
            </div>
            <button type="submit" class="btn btn-primary">ส่งคำร้อง</button>
        </form>
    </div>

    <div class="card">
        <h3>ประวัติ</h3>
        <table>
            <thead>
                <tr>
                    <th>วันที่</th>
                    <th>ประเภท</th>
                    <th>ไฟล์แนบ</th>
                    <th>สถานะ</th>
                    <th>ยกเลิก</th>
                </tr>
            </thead>
            <tbody>
                <% requests.forEach(req=> { %>
                    <tr>
                        <td>
                            <%= new Date(req.date).toLocaleDateString('th-TH') %>
                        </td>
                        <td>
                            <%= req.topic %>
                                <% if(req.reply) { %><br><small class="text-muted">ตอบกลับ: <%= req.reply %></small>
                                    <% } %>
                        </td>
                        <td>
                            <% if (req.attachment_url) { %>
                                <a href="/<%= req.attachment_url %>" target="_blank" style="color: var(--primary);">
                                    <i data-lucide="paperclip" style="width:16px;height:16px;"></i> ไฟล์แนบ
                                </a>
                                <% } else { %>
                                    <span class="text-muted">-</span>
                                    <% } %>
                        </td>
                        <td>
                            <span class="badge badge-<%= req.status %>">
                                <%= req.status==='Pending' ? 'รอดำเนินการ' : req.status==='Approved' ? 'อนุมัติแล้ว' :
                                    req.status==='Rejected' ? 'ปฏิเสธ' : req.status %>
                            </span>
                        </td>
                        <td>
                            <% if (req.canCancel) { %>
                                <form action="/teacher/requests/cancel" method="POST" style="margin:0;"
                                    onsubmit="return confirm('ยืนยันการยกเลิกคำร้องนี้?')">
                                    <input type="hidden" name="request_id" value="<%= req.id %>">
                                    <button type="submit" class="cancel-btn">
                                        <i data-lucide="x-circle" style="width:14px;height:14px;"></i> ยกเลิก
                                    </button>
                                </form>
                                <% } else { %>
                                    <span class="text-muted" style="font-size:0.8rem;">-</span>
                                    <% } %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <%- include('../layouts/footer') %>