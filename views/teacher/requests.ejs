<%- include('../layouts/header') %>

    <h2 class="mb-4">คำร้องอาจารย์</h2>

    <div class="card mb-4">
        <h3>ส่งคำร้อง</h3>
        <form action="/teacher/requests" method="POST">
            <div class="form-group">
                <label>ประเภทคำร้อง</label>
                <select name="type" class="form-control" required>
                    <option value="ลาป่วย/ลากิจ">ลาป่วย/ลากิจ</option>
                    <option value="เบิกอุปกรณ์">เบิกอุปกรณ์</option>
                    <option value="อื่นๆ">อื่นๆ</option>
                </select>
            </div>
            <div class="form-group">
                <label>รายละเอียด</label>
                <textarea name="details" class="form-control" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">ส่ง</button>
        </form>
    </div>

    <div class="card">
        <h3>ประวัติ</h3>
        <table>
            <thead>
                <tr>
                    <th>วันที่</th>
                    <th>ประเภท</th>
                    <th>สถานะ</th>
                </tr>
            </thead>
            <tbody>
                <% requests.forEach(req=> { %>
                    <tr>
                        <td>
                            <%= req.created_at %>
                        </td>
                        <td>
                            <%= req.type %>
                        </td>
                        <td><span class="badge badge-<%= req.status %>">
                                <%= req.status==='Pending' ? 'รอดำเนินการ' : req.status==='Approved' ? 'อนุมัติแล้ว' :
                                    req.status==='Rejected' ? 'ปฏิเสธ' : req.status %>
                            </span></td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <%- include('../layouts/footer') %>