<%- include('../layouts/header') %>

    <h2 class="mb-4">ตารางเรียน</h2>

    <div class="card">
        <h3>ตารางเรียนห้อง <%= student.classroom_name %>
        </h3>
        <table>
            <thead>
                <tr>
                    <th>วัน</th>
                    <th>เวลา</th>
                    <th>รหัสวิชา</th>
                    <th>ชื่อวิชา</th>
                </tr>
            </thead>
            <tbody>
                <% schedule.forEach(s=> { %>
                    <tr>
                        <td><span class="badge" style="background-color: #0f3460; font-weight: normal;">
                                <%= s.day %>
                            </span></td>
                        <td>
                            <%= s.time_slot %>
                        </td>
                        <td>
                            <%= s.code %>
                        </td>
                        <td>
                            <%= s.name %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <% if (schedule.length===0) { %>
            <p class="text-center text-muted mt-4">ยังไม่มีตารางเรียนในระบบ</p>
            <% } %>
    </div>

    <%- include('../layouts/footer') %>