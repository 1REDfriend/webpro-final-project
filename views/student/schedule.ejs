<%- include('../layouts/header') %>

    <% const daysEn=['Monday', 'Tuesday' , 'Wednesday' , 'Thursday' , 'Friday' ]; const daysTh={ 'Monday' : 'จันทร์'
        , 'Tuesday' : 'อังคาร' , 'Wednesday' : 'พุธ' , 'Thursday' : 'พฤหัสบดี' , 'Friday' : 'ศุกร์' }; let timeSlots=[];
        if (schedule && schedule.length> 0) {
        timeSlots = Array.from(new Set(schedule.map(s => s.time_slot))).sort();
        } else {
        timeSlots = ['08.30-09.20', '09.20-10.10', '10.10-11.00', '11.00-11.50', '11.50-12.40', '12.40-13.30',
        '13.30-14.20', '14.20-15.10'];
        }
        const scheduleMatrix = {};
        daysEn.forEach(day => {
        scheduleMatrix[day] = {};
        timeSlots.forEach(time => { scheduleMatrix[day][time] = null; });
        });
        if (schedule && schedule.length > 0) {
        schedule.forEach(s => { if (scheduleMatrix[s.day]) scheduleMatrix[s.day][s.time_slot] = s; });
        }
        %>

        <style>
            @import url('https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap');

            .schedule-container {
                font-family: 'Sarabun', sans-serif;
                background: var(--bg-card);
                padding: 30px;
                border-radius: var(--radius);
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
                margin-bottom: 30px;
                color: var(--text-main);
                overflow-x: auto;
            }

            .schedule-header {
                text-align: center;
                margin-bottom: 20px;
            }

            .schedule-header h3 {
                font-weight: 600;
                margin-bottom: 10px;
                font-size: 1.4rem;
                color: var(--accent);
            }

            .schedule-header p {
                font-size: 1.05rem;
                margin-bottom: 0px;
                color: var(--text-muted);
            }

            .table-schedule {
                width: 100%;
                min-width: 900px;
                border-collapse: collapse;
                border: 2px solid var(--border);
                background-color: transparent;
            }

            .table-schedule th,
            .table-schedule td {
                border: 1px solid var(--border);
                text-align: center;
                vertical-align: middle;
                padding: 8px 4px;
                font-size: 0.95rem;
            }

            .table-schedule thead th {
                font-weight: 600;
                color: var(--accent);
            }

            .table-schedule tbody th {
                font-weight: 600;
                width: 80px;
                color: var(--accent);
            }

            .diagonal-header {
                position: relative;
                min-width: 130px;
                min-height: 70px;
                padding: 0 !important;
                vertical-align: top;
            }

            .diagonal-header svg {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }

            .diagonal-header .top-right {
                position: absolute;
                top: 8px;
                right: 15px;
                font-size: 0.9em;
                font-weight: bold;
                color: var(--accent);
            }

            .diagonal-header .bottom-left {
                position: absolute;
                bottom: 8px;
                left: 15px;
                font-size: 0.9em;
                font-weight: bold;
                color: var(--accent);
            }

            .cell-subject-code {
                font-size: 0.9em;
                font-weight: 500;
                margin-bottom: 2px;
            }

            .cell-teacher-name {
                font-size: 0.85em;
                margin-bottom: 2px;
                color: var(--text-main);
            }

            .cell-room {
                font-size: 0.85em;
                color: var(--text-muted);
            }

            /* Clickable cells */
            .schedule-cell {
                cursor: pointer;
                transition: background 0.2s, transform 0.1s;
            }

            .schedule-cell:hover {
                background: rgba(99, 102, 241, 0.08);
                transform: scale(1.02);
            }

            /* Modal */
            .modal-overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                z-index: 1000;
                justify-content: center;
                align-items: center;
            }

            .modal-overlay.active {
                display: flex;
            }

            .modal-card {
                background: var(--bg-card);
                border-radius: 16px;
                padding: 2rem;
                max-width: 500px;
                width: 90%;
                box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
                animation: modalIn 0.2s ease;
            }

            @keyframes modalIn {
                from {
                    transform: scale(0.9);
                    opacity: 0;
                }

                to {
                    transform: scale(1);
                    opacity: 1;
                }
            }

            .modal-card h3 {
                margin-top: 0;
                color: var(--accent);
                font-size: 1.3rem;
            }

            .modal-row {
                display: flex;
                gap: 0.75rem;
                align-items: flex-start;
                padding: 0.6rem 0;
                border-bottom: 1px solid var(--border);
            }

            .modal-row:last-child {
                border-bottom: none;
            }

            .modal-row .label {
                font-weight: 600;
                min-width: 120px;
                color: var(--text-muted);
                font-size: 0.9em;
            }

            .modal-row .value {
                color: var(--text-main);
            }

            .modal-close {
                position: absolute;
                top: 1rem;
                right: 1rem;
                cursor: pointer;
                background: none;
                border: none;
                color: var(--text-main);
                font-size: 1.5rem;
            }
        </style>

        <!-- Detail Modal -->
        <div class="modal-overlay" id="scheduleModal" onclick="if(event.target===this) closeModal()">
            <div class="modal-card" style="position: relative;">
                <button class="modal-close" onclick="closeModal()">✕</button>
                <h3 id="modal-subject-name">ชื่อวิชา</h3>
                <div class="modal-row">
                    <span class="label">รหัสวิชา:</span>
                    <span class="value" id="modal-code">-</span>
                </div>
                <div class="modal-row">
                    <span class="label">อาจารย์ผู้สอน:</span>
                    <span class="value" id="modal-teacher">-</span>
                </div>
                <div class="modal-row">
                    <span class="label">วัน-เวลา:</span>
                    <span class="value" id="modal-time">-</span>
                </div>
                <div class="modal-row">
                    <span class="label">หน่วยกิต:</span>
                    <span class="value" id="modal-credit">-</span>
                </div>
            </div>
        </div>

        <div class="schedule-container">
            <div class="schedule-header">
                <img src="/assets/images/krut-logo.png" alt="" style="height: 60px; margin-bottom: 15px;"
                    onerror="this.style.display='none'">
                <h3>ตารางเรียนนักเรียนชั้น <%= student.classroom_name %> ภาคเรียนที่ 1 ปีการศึกษา 2568</h3>
                <p>เรียนประจำห้อง <%= student.classroom_name %>
                </p>
            </div>

            <table class="table-schedule">
                <thead>
                    <tr>
                        <th rowspan="2" class="diagonal-header">
                            <svg preserveAspectRatio="none" viewBox="0 0 100 100">
                                <line x1="0" y1="0" x2="100" y2="100" stroke="black" stroke-width="1"></line>
                            </svg>
                            <span class="top-right">คาบที่</span>
                            <span class="bottom-left">วัน/เวลา</span>
                        </th>
                        <% timeSlots.forEach((slot, index)=> { %>
                            <th>
                                <%= index + 1 %>
                            </th>
                            <% }) %>
                    </tr>
                    <tr>
                        <% timeSlots.forEach(slot=> { %>
                            <th style="font-size: 0.8rem; padding: 4px;">
                                <%= slot %> น.
                            </th>
                            <% }) %>
                    </tr>
                </thead>
                <tbody>
                    <% daysEn.forEach(day=> { %>
                        <tr>
                            <th>
                                <%= daysTh[day] %>
                            </th>
                            <% timeSlots.forEach(time=> {
                                const item = scheduleMatrix[day][time];
                                if (item) { %>
                                <td class="schedule-cell" data-name="<%= item.name || '' %>"
                                    data-code="<%= item.code || '' %>" data-teacher="<%= item.teacher_name || '-' %>"
                                    data-time="<%= daysTh[day] %> <%= time %>" data-credit="<%= item.credit || '' %>"
                                    onclick="openModal(this)">
                                    <div class="cell-subject-code">
                                        <%= item.code %>
                                    </div>
                                    <div class="cell-teacher-name">
                                        <%= item.teacher_name || item.name %>
                                    </div>
                                </td>
                                <% } else { %>
                                    <td></td>
                                    <% } }) %>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

            <% if (schedule.length===0) { %>
                <p class="text-center text-muted mt-4">ยังไม่มีตารางเรียนในระบบ</p>
                <% } %>
        </div>

        <script>
            function openModal(el) {
                const d = el.dataset;
                document.getElementById('modal-subject-name').textContent = d.name || '-';
                document.getElementById('modal-code').textContent = d.code || '-';
                document.getElementById('modal-teacher').textContent = d.teacher || '-';
                document.getElementById('modal-time').textContent = d.time || '-';
                const credit = d.credit;
                document.getElementById('modal-credit').textContent = (credit !== undefined && credit !== '') ? credit + ' หน่วยกิต' : '-';
                document.getElementById('scheduleModal').classList.add('active');
            }
            function closeModal() {
                document.getElementById('scheduleModal').classList.remove('active');
            }
            document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeModal(); });
        </script>

        <%- include('../layouts/footer') %>