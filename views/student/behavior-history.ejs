<%- include('../layouts/header') %>

    <style>
        .behavior-card {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 0.9rem 1rem;
            border-radius: 10px;
            border: 1px solid var(--border);
            margin-bottom: 0.6rem;
            background: var(--bg-card);
            transition: background 0.15s;
        }

        .behavior-card:hover {
            background: rgba(99, 102, 241, 0.06);
        }

        .behavior-score-badge {
            min-width: 56px;
            height: 56px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.15rem;
            font-weight: 700;
            flex-shrink: 0;
        }

        .score-plus {
            background: rgba(0, 184, 148, 0.15);
            color: #00b894;
        }

        .score-minus {
            background: rgba(231, 76, 60, 0.15);
            color: #e74c3c;
        }

        .score-neutral {
            background: rgba(108, 117, 125, 0.12);
            color: #6c757d;
        }
    </style>

    <div style="display:flex;align-items:center;gap:1rem;margin-bottom:1.5rem;">
        <a href="/student/dashboard" class="btn btn-secondary"
            style="display:inline-flex;align-items:center;gap:.4rem;">
            <i data-lucide="arrow-left" style="width:16px;height:16px;"></i> กลับ
        </a>
        <h2 style="margin:0;">ประวัติคะแนนความประพฤติ</h2>
    </div>

    <div class="card mb-4" style="text-align:center;">
        <h3>คะแนนปัจจุบัน</h3>
        <% const scoreColor=student.behavior_score < 50 ? '#e74c3c' : student.behavior_score < 70 ? '#f39c12'
            : '#00b894' ; %>
            <div style="font-size:3rem;font-weight:700;color:<%= scoreColor %>;margin:0.5rem 0;">
                <%= student.behavior_score %>
            </div>
            <p class="text-muted" style="margin:0;">จากคะแนนเต็ม 100 คะแนน</p>
    </div>

    <div class="card">
        <h3>บันทึกการเปลี่ยนแปลงคะแนน (<%= logs.length %> รายการ)</h3>

        <% if (logs && logs.length> 0) { %>
            <% logs.forEach(log=> { %>
                <% const isPlus=log.score_change> 0;
                    const isNeutral = log.score_change === 0;
                    const badgeClass = isNeutral ? 'score-neutral' : isPlus ? 'score-plus' : 'score-minus';
                    const prefix = isPlus ? '+' : '';
                    %>
                    <div class="behavior-card">
                        <div class="behavior-score-badge <%= badgeClass %>">
                            <%= prefix %>
                                <%= log.score_change %>
                        </div>
                        <div style="flex:1;">
                            <p style="margin:0;font-weight:600;">
                                <%= log.reason || 'ไม่ระบุเหตุผล' %>
                            </p>
                            <small class="text-muted">
                                บันทึกโดย: <%= log.teacher_name || 'ระบบ' %>
                                    &nbsp;·&nbsp;
                                    <%= new Date(log.created_at).toLocaleDateString('th-TH', { year: 'numeric' ,
                                        month: 'long' , day: 'numeric' }) %>
                                        <%= new Date(log.created_at).toLocaleTimeString('th-TH', { hour: '2-digit' ,
                                            minute: '2-digit' }) %> น.
                            </small>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <p class="text-muted" style="text-align:center;padding:2rem 0;">
                                ยังไม่มีบันทึกการเปลี่ยนแปลงคะแนน</p>
                            <% } %>
    </div>

    <%- include('../layouts/footer') %>