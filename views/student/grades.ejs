<%- include('../layouts/header') %>

    <h2 class="mb-4">ผลการเรียน (Transcript)</h2>

    <div class="card">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
            <h3>ภาคเรียนที่ 1/2026</h3>
            <a href="/student/transcript/download" class="btn btn-secondary">พิมพ์ใบเกรด (PDF)</a>
        </div>

        <table>
            <thead>
                <tr>
                    <th>รหัสวิชา</th>
                    <th>ชื่อวิชา</th>
                    <th>หน่วยกิต</th>
                    <th>คะแนนเก็บ</th>
                    <th>คะแนนสอบ</th>
                    <th>รวม</th>
                    <th>เกรด</th>
                </tr>
            </thead>
            <tbody>
                <% grades.forEach(item=> { %>
                    <tr>
                        <td>
                            <%= item.code %>
                        </td>
                        <td>
                            <%= item.name %>
                        </td>
                        <td>
                            <%= item.credit %>
                        </td>
                        <td>
                            <%= item.grade_midterm %>
                        </td>
                        <td>
                            <%= item.grade_final %>
                        </td>
                        <td>
                            <%= item.total_score %>
                        </td>
                        <td style="font-weight: bold; color: var(--accent);">
                            <%= item.grade_char %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6" style="text-align: right; font-weight: bold; padding-right: 1rem;">เกรดเฉลี่ยสะสม
                        (GPA)</td>
                    <td style="font-weight: bold; font-size: 1.1rem; color: #00b894;">
                        <%= gpa %>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>

    <%- include('../layouts/footer') %>