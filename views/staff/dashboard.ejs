<%- include('../layouts/header') %>

    <h2 class="mb-4">ระบบจัดการคำร้อง</h2>

    <div class="card">
        <h3>รายการคำร้องทั้งหมด</h3>
        <table>
            <thead>
                <tr>
                    <th>วันที่</th>
                    <th>ผู้ส่ง</th>
                    <th>หัวข้อ</th>
                    <th>รายละเอียด</th>
                    <th>สถานะ</th>
                    <th>การจัดการ</th>
                </tr>
            </thead>
            <tbody>
                <% requests.forEach(req=> { %>
                    <tr>
                        <td>
                            <%= new Date(req.date).toLocaleDateString('th-TH') %>
                        </td>
                        <td>
                            <%= req.sender_name %> (<span style="color: var(--accent);">
                                    <%= req.sender_role %>
                                </span>)
                        </td>
                        <td>
                            <%= req.topic %>
                        </td>
                        <td style="max-width: 300px;">
                            <%= req.description %>
                                <% if(req.reply) { %><br><small class="text-muted">ตอบกลับ: <%= req.reply %></small>
                                    <% } %>
                        </td>
                        <td>
                            <span class="badge badge-<%= req.status %>">
                                <%= req.status==='Pending' ? 'รอดำเนินการ' : req.status==='Approved' ? 'อนุมัติแล้ว' :
                                    req.status==='Rejected' ? 'ปฏิเสธ' : req.status %>
                            </span>
                        </td>
                        <td>
                            <% if (req.status==='Pending' ) { %>
                                <form action="/staff/request-update" method="POST"
                                    style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                                    <input type="hidden" name="id" value="<%= req.id %>">
                                    <input type="text" name="reply" placeholder="ระบุเหตุผล/ตอบกลับ"
                                        class="form-control" style="width: 150px; padding: 0.4rem;">
                                    <button type="submit" name="status" value="Approved" class="btn btn-success"
                                        style="padding: 0.3rem 0.6rem; font-size: 0.8rem;">อนุมัติ</button>
                                    <button type="submit" name="status" value="Rejected" class="btn btn-danger"
                                        style="padding: 0.3rem 0.6rem; font-size: 0.8rem;">ปฏิเสธ</button>
                                </form>
                                <% } else { %>
                                    <span class="text-muted">-</span>
                                    <% } %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <%- include('../layouts/footer') %>